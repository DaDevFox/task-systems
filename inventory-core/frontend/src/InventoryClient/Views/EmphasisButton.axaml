<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="120" d:DesignHeight="32"
             x:Class="InventoryClient.Views.EmphasisButton"
             x:Name="Root">

  <UserControl.Styles>
    <Style Selector="UserControl:pointerover Border.hover-overlay">
      <Setter Property="Opacity" Value="1"/>
      <Setter Property="RenderTransform">
        <Setter.Value>
          <TransformGroup>
            <SkewTransform AngleX="-12"/>
            <TranslateTransform X="0"/>
          </TransformGroup>
        </Setter.Value>
      </Setter>
    </Style>
  </UserControl.Styles>

  <Grid Height="32" MinWidth="80" Cursor="Hand" Margin="8,2" ClipToBounds="True">
    
    <!-- Base parallelogram button -->
    <Border Background="{Binding #Root.BaseColor}"
            CornerRadius="2"
            Margin="4,0">
      <Border.RenderTransform>
        <SkewTransform AngleX="-12"/>
      </Border.RenderTransform>
    </Border>

    <!-- Hover overlay with angled slide-in effect -->
    <Border Classes="hover-overlay"
            Background="{Binding #Root.HoverColor}"
            CornerRadius="2"
            Opacity="0"
            Margin="4,0">
      <Border.RenderTransform>
        <TransformGroup>
          <SkewTransform AngleX="-12"/>
          <TranslateTransform X="-120"/>
        </TransformGroup>
      </Border.RenderTransform>
      <Border.Transitions>
        <Transitions>
          <DoubleTransition Property="Opacity" Duration="0:0:0.25"/>
          <DoubleTransition Property="((TransformGroup)RenderTransform).Children[1].X" Duration="0:0:0.25"/>
        </Transitions>
      </Border.Transitions>
    </Border>

    <!-- Button text (no transform - keep it normal) -->
    <TextBlock Text="{Binding #Root.Text}"
               Foreground="{Binding #Root.TextColor}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontWeight="Medium"
               FontSize="12"
               IsHitTestVisible="False"/>
    
  </Grid>

</UserControl>
